<%- include('../partials/head') %>
<%- include('../partials/navbar') %>
<main>
    <h1>MESSAGES</h1>
    <% if(annonces.length > 0) { %>
        <% annonces.forEach(annonce => { %>
            <a href="/chat/<%= annonce.conversationId %>">
                <div class="card">
                    <div class="content-img">
                        <img src="../../../uploads/<%= annonce.imageUrl %>" alt="">
                    </div>
                    <div class="info-annonce">
                        <p><%= annonce.title %></p>
                        <p><%= annonce.recipient[0] %></p>
                        <p><%= annonce.lastMessage %></p>
                        <p><%= annonce.dateLastMessage %></p>
                    </div>
                </div>
            </a>
        <% }) %>
    <% } else { %>
        <p>Vous n'avez pas de messages</p>
    <% } %>
</main>
<%- include('../partials/footer') %>